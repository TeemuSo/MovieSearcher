<UserControl x:Class="MovieSearcher.Controls.ReviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieSearcher.Controls"
             xmlns:models="clr-namespace:MovieSearcher.Models"
             d:DataContext ="{d:DesignInstance {x:Type models:Movie}, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" VerticalAlignment="Top" HorizontalAlignment="Left">

    <StackPanel Grid.Column="2" Orientation="Horizontal">
        <Image Source="/MovieSearcher;component/Icons/rt-100.png" Width="20"/>
        <Label Content="{Binding Reviews/Score}" MinWidth="30" Foreground="White"></Label>
    </StackPanel>
</UserControl>
    

