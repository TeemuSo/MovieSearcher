<UserControl x:Class="MovieSearcher.Controls.ReviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieSearcher.Controls"
             xmlns:models="clr-namespace:MovieSearcher.Models"
             mc:Ignorable="d" VerticalAlignment="Top" HorizontalAlignment="Left">

        <StackPanel Grid.Column="2" Orientation="Horizontal">
            <Image Width="20" Source="{Binding Image}"/>
            <Label Foreground="White" Content="{Binding Score}" MinWidth="30"></Label>
        </StackPanel>
</UserControl>
    

